Dialogue: 0,0:01:35.26,0:01:37.28,Main01,Toshi,0000,0000,0000,,{\pos(638,607)}!هيا بنا
Dialogue: 0,0:01:37.28,0:01:39.03,Main01,Toshi,0000,0000,0000,,!لنحتفل
Dialogue: 0,0:01:39.23,0:01:41.24,Main01,All,0000,0000,0000,,!حسناً
Dialogue: 0,0:01:41.48,0:01:45.66,Main01,All,0000,0000,0000,,!ياه! لم نرك منذ مدة يا كيوشيرو ساما
Dialogue: 0,0:01:45.89,0:01:48.92,Main01,Kyo,0000,0000,0000,,...الـ-النجدة
Dialogue: 0,0:01:48.92,0:01:51.90,Main01,Shin,0000,0000,0000,,!وبالأحرى إن السيدة على وشك الوصول
Dialogue: 0,0:01:51.90,0:01:53.09,Main01,Shin,0000,0000,0000,,,على الرغم من أننا لم نبدأ بعد
Dialogue: 0,0:01:53.09,0:01:56.88,Main01,Shin,0000,0000,0000,,!وقد تمت الإطاحة بكيوشيرو سان من قبل الوحوش
